easyblock = 'PythonPackage'

name = 'pyuda'
version = '{{ version }}'
homepage = 'https://github.com/ukaea/uda'
description = 'uda python wrapper'

toolchain = {'name': 'GCC', 'version': '{{ toolchain_version }}'}

sources = []
source_urls = []

dependencies = [
    ('uda', '%(version)s'),
    ('Python', '{{ python_version }}')
]

preinstallopts = 'cd %(EBROOTUDA)s/python_installer && '

installopts = '--prefix=%(installdir)s'

modextravars = {
    'PYTHONPATH': '%(EBROOTPYTHON)s/lib/python%(pyshortver)s/site-packages:$PYTHONPATH',
}
