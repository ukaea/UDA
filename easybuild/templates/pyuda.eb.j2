easyblock = 'Bundle'

name = 'pyuda'
version = '{{ version }}'
homepage = 'https://github.com/ukaea/uda'
description = 'uda python wrapper'

toolchain = {'name': 'GCC', 'version': '{{ toolchain_version }}'}

sources = []
source_urls = []

dependencies = [
    ('uda', '%(version)s'),
    ('Python', '{{ python_version }}')
]

postinstallcmds = [
    '$EBROOTPYTHON/bin/python3 -m pip install $EBROOTUDA/python_installer '
    '--target=%(installdir)s/lib/python%(pyshortver)s/site-packages',
]

modextravars = {
    'PYTHONPATH': '%(installdir)s/lib/python%(pyshortver)s/site-packages:\$PYTHONPATH',
}
