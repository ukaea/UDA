easyblock = 'CMakeNinja'

name = 'uda'
version = '{{ version }}'

homepage = 'https://github.com/ukaea/UDA'
description = """Universal Data Access"""

toolchain = {'name': 'GCC', 'version': '{{ toolchain_version }}'}
toolchainopts = {'pic': True}

source_urls = ['{{ source_url }}']
sources = ['{{ source_file }}']
checksums = ['{{ checksum }}']

builddependencies = [
    ('CMake', '3.27.6'),
    ('Ninja', '1.11.1'),
]

dependencies = [
    ('libxml2', '2.11.5'),
    ('libtirpc', '1.3.4'),
    ('Boost', '1.83.0'),
    ('fmt', '10.2.0'),
    ('spdlog', '1.12.0'),
    ('CapnProto', '1.0.1.1'),
    ('OpenSSL', '1.1', '', SYSTEM),
]

separate_build_dir = True

build_type = '{{ build_type }}'

parallel = {{ parallel }}

configopts = '-DBUILD_SHARED_LIBS=ON '
configopts += '-DBOOST_ROOT=${EBROOTBOOST} '
configopts += '-DENABLE_CAPNP=ON '
configopts += '-DSSLAUTHENTICATION=ON '

sanity_check_paths = {
    'files': ['bin/uda_server',
              'bin/install_plugin',
              'lib/libfatuda_client.%s' % SHLIB_EXT,
              'lib/libuda_client.%s' % SHLIB_EXT,
              'lib/libuda_plugins.%s' % SHLIB_EXT,
              'lib/libuda_server.%s' % SHLIB_EXT, ],
    'dirs':  ['bin', 'etc/plugins', 'include/uda/plugins', 'lib/plugins', 'modulefiles', 'python_installer']
}

moduleclass = 'data'

