#!/usr/bin/env python

import os
import sys
from distutils.core import setup, Extension

extra_link_args = []

root = os.environ.get('UDA_DIR', '@CMAKE_INSTALL_PREFIX@')

if sys.platform.lower() == 'darwin':
    # On Mac OS we have to force setting of rpath
    extra_link_args.append('-Wl,-rpath,%s/lib' % root)

build_fat = os.environ.get('UDA_FAT_PYTHON', False)
if build_fat:
    uda_lib = 'fat@PROJECT_NAME@_cpp'
    extra_libs = ['xml2', 'pq']
    extra_macros = [('FATCLIENT', None)]
else:
    uda_lib = '@PROJECT_NAME@_cpp'
    extra_libs = []
    extra_macros = []

ext = Extension(
    '_c_uda',
    ['@PY_WRAPPER_CODE@'],
    define_macros=[('SWIG', None),] + extra_macros,
    include_dirs=[
        root + '/include/uda',
        root + '/include/uda/c++',
        '@Boost_INCLUDE_DIRS@',
    ],
    libraries = [uda_lib, 'ssl', 'crypto'] + extra_libs,
    library_dirs = [
        root + '/lib',
        '@OPENSSL_LIB_DIR@',
    ],
    runtime_library_dirs = [
        root + '/lib',
        '@OPENSSL_LIB_DIR@',
    ],
    extra_link_args=extra_link_args,
    extra_compile_args=['-std=c++11']
)

setup(
    name='@PROJECT_NAME@',
    version='@PROJECT_VERSION@',
    description='Unified Data Access (UDA)',
    author='Jonathan Hollocombe',
    author_email='jonathan.hollocombe@ukaea.uk',
    url='https://git.iter.org/projects/IMAS/repos/uda/browse',
    packages=['pyuda'],
    ext_modules=[ext]
)

